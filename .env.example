# Environment Variables Template

# Selenium Grid Configuration
# For local development with docker-compose
SELENIUM_GRID_URL=http://selenium-hub:4444

# For Railway deployment, this will be set automatically
# SELENIUM_GRID_URL=http://selenium-hub:4444

# FastAPI Configuration
PORT=8000
HOST=0.0.0.0

# Python Configuration
PYTHONUNBUFFERED=1

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Scheduler Configuration
# Update interval in hours
UPDATE_INTERVAL_HOURS=8

# Selenium Grid Configuration
GRID_MAX_SESSION=10
GRID_BROWSER_TIMEOUT=300
GRID_TIMEOUT=300

# Browser Node Configuration
SE_NODE_MAX_SESSIONS=3
SE_NODE_SESSION_TIMEOUT=300
SE_NODE_MAX_INSTANCES=3

# Chrome Node Configuration
CHROME_ENABLED=true
CHROME_INSTANCES=3

# Firefox Node Configuration
FIREFOX_ENABLED=true
FIREFOX_INSTANCES=3

# Edge Node Configuration
EDGE_ENABLED=true
EDGE_INSTANCES=3

# Memory Configuration
# In MB (2GB = 2048)
CHROME_MEMORY=2048
FIREFOX_MEMORY=2048
EDGE_MEMORY=2048

# File Configuration
DATA_DIR=./data
EXCEL_FILENAME=egx_stocks_latest.xlsx

# Railway Specific Variables (automatically set by Railway)
# RAILWAY_ENVIRONMENT_NAME
# RAILWAY_SERVICE_NAME
# RAILWAY_PUBLIC_DOMAIN
# RAILWAY_PRIVATE_URL
