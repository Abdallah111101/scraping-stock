{
  "services": [
    {
      "name": "egx-scraper-app",
      "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
      },
      "ports": [
        {
          "port": 8000,
          "expose": true
        }
      ],
      "environment": {
        "PYTHONUNBUFFERED": "1",
        "PORT": "8000"
      },
      "healthCheck": {
        "path": "/status",
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 10
      },
      "volumes": [
        {
          "path": "/app/data",
          "size": "1Gi"
        }
      ],
      "restartPolicy": "unless-stopped",
      "resources": {
        "memory": "2Gi",
        "cpu": "1"
      }
    }
  ],
  "project": {
    "name": "egx-stock-scraper",
    "description": "Egyptian Exchange Stock Data Scraper with FastAPI"
  }
}
